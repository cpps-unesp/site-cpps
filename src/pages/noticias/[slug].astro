---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getEntryBySlug } from 'astro:content';
const { slug } = Astro.params;
const noticia = await getEntryBySlug('noticias', slug);
const { Content } = await noticia.render();
---

<BaseLayout>
  <article class="prose max-w-3xl mx-auto py-10">
    <h1>{noticia.data.title}</h1>
    <p class="text-sm text-gray-500">{new Date(noticia.data.date).toLocaleDateString()}</p>
    <img src={noticia.data.image} alt={noticia.data.title} class="my-6 rounded-lg" />
    <Content />
  </article>
</BaseLayout>
