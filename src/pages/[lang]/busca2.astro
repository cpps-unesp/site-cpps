const { lang } = Astro.params;
---

<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Busca - CPPS (debug)</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    .container {
      max-width: 600px;
      margin: 2rem auto;
      padding: 1rem;
      font-family: Arial, sans-serif;
    }
    .input {
      display: block;
      width: 100%;
      padding: 0.5rem;
      margin-bottom: 1rem;
      border: 1px solid #ccc;
      border-radius: 0.25rem;
    }
    .menu {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .menu li {
      padding: 0.5rem;
      border-bottom: 1px solid #eee;
    }
    .menu li:hover {
      background: #f0f0f0;
    }
  </style>
</head>
<body>
<div class="container">
    <h1>Busca com Debug</h1>
    <input 
      id="search-input" 
      type="text" 
      placeholder="Digite sua busca..." 
      class="input"
      aria-label="Buscar"
    />

    <ul id="search-results" class="menu"></ul>
  </div>

  <script type="module">
    console.log("‚úÖ Iniciando import do Pagefind...");

    import("/_pagefind/pagefind.js").then(({ default: pagefind }) => {
      console.log("‚úÖ Pagefind importado com sucesso:", pagefind);

      const input = document.getElementById('search-input');
      const resultsContainer = document.getElementById('search-results');

      if (!input) {
        console.error("‚ùå N√£o encontrou o elemento #search-input!");
      }
      if (!resultsContainer) {
        console.error("‚ùå N√£o encontrou o elemento #search-results!");
      }

      let debounceTimeout = null;

      function clearResults() {
        console.log("üßπ Limpando resultados...");
        resultsContainer.innerHTML = '';
      }

      function createResultItem(url, title) {
        const li = document.createElement('li');
        li.innerHTML = `<a href="${url}">${title}</a>`;
        return li;
      }

      input.addEventListener('input', () => {
        const term = input.value.trim();
        console.log("üìù Input detectado:", term);

        clearTimeout(debounceTimeout);
        debounceTimeout = setTimeout(async () => {
          if (term.length < 2) {
            console.warn("‚ö†Ô∏è Termo muito curto para buscar.");
            clearResults();
            return;
          }

          console.log("üîé Buscando por:", term);
          try {
            const results = await pagefind.search(term);
            console.log("üì¶ Resultados encontrados:", results);

            clearResults();

            if (results.length) {
              for (const result of results) {
                const item = await result.data();
                console.log("üìÑ Item:", item);
                const li = createResultItem(item.url, item.meta.title || item.excerpt);
                resultsContainer.appendChild(li);
              }
            } else {
              console.log("‚ùóÔ∏è Nenhum resultado encontrado.");
              const li = document.createElement('li');
              li.textContent = 'Nenhum resultado encontrado';
              resultsContainer.appendChild(li);
            }
          } catch (err) {
            console.error("‚ùå Erro ao buscar:", err);
          }
        }, 300);
      });
    }).catch(err => {
      console.error("‚ùå Falha ao importar Pagefind:", err);
    });
  </script>

</body>
</html>