  { icon: '💲', title: 'Pricing', description: "Behold the dessert menu of the website world. Tempting choices await, can you resist?" }
];
---

<BaseLayout>
  <Hero />

  <!-- Seção de Iniciativas -->
  <section class="mt-16">
    <p class="text-center text-primary font-semibold uppercase tracking-wide mb-2">Iniciativas</p>
    <h2 class="text-center text-3xl font-extrabold mb-4">O que você encontra no CPPS</h2>
    <p class="text-center text-xl text-base-content mb-10 max-w-2xl mx-auto">
      Conheça nossas principais iniciativas, projetos e formas de atuação que promovem o desenvolvimento acadêmico e social.
    </p>

    <div class="grid gap-8 md:grid-cols-2">
      {initiatives.map((item) => (
        <InitiativeCard 
          icon={item.icon} 
          title={item.title} 
          description={item.description} 
        />
      ))}
    </div>
  </section>

  <!-- Introdução geral das Atividades -->
  <section class="mt-16">
    <p class="text-center text-primary font-semibold uppercase tracking-wide mb-2">Atividades</p>
    <h2 class="text-center text-3xl font-extrabold mb-4">O que fazemos</h2>
    <p class="text-center text-xl text-base-content mb-10 max-w-2xl mx-auto">
      Veja nossas principais atividades, que promovem ensino, pesquisa e extensão no CPPS.
    </p>
  </section>

  <!-- Seções específicas de atividades -->
  <AtividadesSection 
    title="Nossas Pesquisas" 
    description="Veja algumas pesquisas em andamento no CPPS." 
    image="/images/pesquisa.jpg" 
    activities={atividadesPesquisa}
/>

  <AtividadesSection 
    title="Nossas Extensões" 
    description="Projetos de extensão que aproximam a universidade da sociedade." 
    image="/images/extensao.jpg" 
    activities={atividadesExtensao} 
    reverse={true}
/>

  <!-- Seção de Produtos -->
  <ProdutosSection 
    title="Get your dream website up and running in no time with AstroWind." 
    image="/images/relogio.jpg" 
    produtos={produtos}
/>
 <MostUsedWidgets widgets={widgets} />
<FAQSection faqs={faqs} />
<EquipeSection equipe={equipe} />
<!-- <NoticiasSection /> -->
</BaseLayout>
