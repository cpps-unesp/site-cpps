const equipe = [
  {
    nome: "Hélio Alexandre da Silva",
    cargo: "Pesquisador – Coordenador",
    foto: "/images/helio.jpg",
    descricao: "Prof. Assistente doutor da UNESP, câmpus Franca...",
    linkedin: "https://linkedin.com/in/helio",
  },
  {
    nome: "Ana Júlia Diniz Neves do Lago",
    cargo: "Mestranda",
    foto: "/images/ana.jpg",
