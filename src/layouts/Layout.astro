---
import Menu from "../components/GeralMenu.astro";
import Fapesp from "../components/GeralFapesp.astro";
import Rodape from "../components/GeralRodape.astro";
import ScrollToTop from "../components/GeralScrollToTop.astro"
import { useTranslations } from "../i18n/translations";


const { lang: rawLang, title = "NÃ©FITS" } = Astro.params;
const lang = rawLang ?? "pt";
const t = useTranslations(lang);
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/src/styles/global.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="/images/logos/nefits_favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-white text-gray-900 font-sans">
    <Menu lang={lang} t={t} />
    <main>
      <slot />
      
    </main>
    <ScrollToTop />
    <Fapesp lang={lang} t={t} />
    <Rodape lang={lang} t={t} />
  </body>
</html>
