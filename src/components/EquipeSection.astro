---
const { equipe } = Astro.props;
---

<section class="mt-16">
  <h2 class="text-4xl font-extrabold mb-8">Equipe</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {equipe.map((membro) => (
      <div class="bg-base-100 rounded-lg shadow-md p-6 flex flex-col space-y-4">
        <img src={membro.foto} alt={membro.nome} class="rounded-md w-full h-48 object-cover" />

        <div class="flex space-x-2">
          {membro.linkedin && <a href={membro.linkedin} class="text-primary text-xl">ðŸ”—</a>}
          {membro.instagram && <a href={membro.instagram} class="text-primary text-xl">ðŸ“¸</a>}
        </div>

        <div>
          <h3 class="text-lg font-bold text-red-600">{membro.nome}</h3>
          <p class="text-sm text-gray-600 mb-2">{membro.cargo}</p>
          <p class="text-sm text-base-content">{membro.descricao}</p>
        </div>
      </div>
    ))}
  </div>
</section>
