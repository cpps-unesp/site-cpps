---
interface Props {
  title: string;
  href: string;
  description?: string;
  icon?: string;
}

const { title, href, description, icon } = Astro.props;
---

<a href={href} class="card bg-base-200 border border-base-300 shadow-sm hover:border-primary/50 hover:bg-base-300 transition-all not-prose no-underline group">
  <div class="card-body p-6">
    <h3 class="card-title text-lg flex items-center gap-2 group-hover:text-primary transition-colors">
      {icon && <span>{icon}</span>}
      {title}
    </h3>
    {description && <p class="text-sm text-base-content/70 mt-1">{description}</p>}
  </div>
</a>
