---
export function getStaticPaths() {
  return [
    { params: { lang: 'pt' } },
    { params: { lang: 'en' } },
    { params: { lang: 'es' } }
  ];
}

const { lang } = Astro.params;
import Search from "astro-pagefind/components/Search";
---

<!-- ‚úÖ Bot√£o para abrir o modal -->
<label for="search-modal" class="btn">üîç Buscar</label>

<!-- ‚úÖ Modal DaisyUI -->
<input type="checkbox" id="search-modal" class="modal-toggle" />
<div class="modal" role="dialog" aria-modal="true" aria-labelledby="search-title">
  <div class="modal-box animate-scale-up glass-modal relative">
    <!-- ‚úÖ Bot√£o de fechar "X" -->
    <label for="search-modal" class="absolute top-3 right-3 cursor-pointer text-lg font-bold">‚úñ</label>

    <h3 id="search-title" class="font-bold text-lg mb-4 text-primary">Buscar</h3>

    <!-- ‚úÖ Componente de busca Pagefind mais transl√∫cido -->
    <div class="search-wrapper">
      <Search id="search" className="pagefind-ui w-full" uiOptions={{ showImages: false }} />
    </div>

    <!-- ‚úÖ Indica√ß√£o com mesma cor do t√≠tulo -->
    <p class="text-sm font-semibold text-primary text-right mt-4">Pressione ESC para fechar</p>
  </div>
</div>

<script>
  document.addEventListener('keydown', (e) => {
    const modalToggle = document.getElementById('search-modal');
    if (e.key === 'Escape' && modalToggle.checked) {
      modalToggle.checked = false;
    }
  });

  // ‚úÖ Ao abrir o modal ‚Üí foco no campo de busca
  document.getElementById('search-modal').addEventListener('change', () => {
    const modalToggle = document.getElementById('search-modal');
    if (modalToggle.checked) {
      setTimeout(() => {
        const input = document.querySelector('.pagefind-ui input');
        if (input) input.focus();
      }, 100);  // Pequeno delay para garantir que o componente carregou
    }
  });
</script>

<style is:global>
  @keyframes scale-up {
    0% {
      transform: scale(0.95);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
  .animate-scale-up {
    animation: scale-up 0.2s ease-out;
  }
  .glass-modal {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    border-radius: 1rem;
  }

  .search-wrapper {
    background: rgba(255, 255, 255, 0.6); /* ‚úÖ Branco transl√∫cido */
    backdrop-filter: blur(8px);
    padding: 0.75rem;
    border-radius: 0.5rem;
  }

  .search-wrapper input {
    background: rgba(255, 255, 255, 0.8); /* ‚úÖ Branco mais s√≥lido mas ainda transl√∫cido */
    backdrop-filter: blur(4px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
</style>
