---
import BaseLayout from '../layouts/BaseLayout.astro';
import NewsSidebar from './NewsSidebar.astro';
import { getEntry, getCollection } from 'astro:content';
import routeTranslations from '../i18n/routeTranslations';
import type { SupportedLang } from '../types/lang';
import { getTranslations } from '../utils/i18n';
import slugify from 'slugify';

const { lang, slug } = Astro.props as { lang: SupportedLang; slug: string };
const locale = getTranslations(lang);

const noticiasRoute = routeTranslations['noticias'][lang as SupportedLang];
const post = await getEntry('noticias', slug.replace(`${noticiasRoute}/`, ''));

if (!post) throw new Error(`Notícia não encontrada: ${slug}`);

const allNoticias = await getCollection('noticias');
const langNoticias = allNoticias
  .filter(p => p.data.lang === lang)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const { title, date, image, tags, author, resumo } = post.data;
const { Content } = await post.render();
---

<BaseLayout
  lang={lang}
  titulo={title}
  descricao={resumo}
  texts={locale.texts}
  identidade={locale.identidade}
  githubPath={`src/content/noticias/${post.id}`}
>
  <main class="container mx-auto px-4 py-12">
    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Article Content -->
      <article class="lg:col-span-2">
        <header class="mb-8">
          <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag: string) => (
              <a
                href={`/${lang}/noticias/categoria/${slugify(tag, { lower: true, strict: true })}`}
                class="text-xs font-bold uppercase tracking-widest text-primary hover:underline"
              >
                {tag}
              </a>
            ))}
          </div>

          <h1 class="text-4xl md:text-5xl font-bold text-base-content mb-6 leading-tight">
            {title}
          </h1>

          <p class="text-xl text-base-content/70 mb-8 italic">
            {resumo}
          </p>

          <div class="flex items-center gap-4 py-6 border-y border-base-200 text-sm">
            <div class="flex flex-col">
              {author && <span class="font-bold text-base-content">{locale.noticias?.by || 'Por'} {author}</span>}
              <span class="text-base-content/60">
                {locale.publicacoes?.publishedIn || 'Publicado em'} {new Date(date).toLocaleDateString(lang === 'pt' ? 'pt-BR' : 'en-US', { day: 'numeric', month: 'long', year: 'numeric' })}
              </span>
            </div>
          </div>
        </header>

        {image && (
          <figure class="mb-10">
            <img src={image} alt={title} class="w-full rounded-2xl shadow-lg" />
          </figure>
        )}

        <div class="prose prose-lg max-w-none
          prose-headings:text-primary prose-headings:font-bold
          prose-p:text-base-content/90 prose-p:leading-relaxed prose-p:text-justify
          prose-a:text-primary prose-a:no-underline hover:prose-a:underline
          prose-img:rounded-xl prose-img:shadow-md">
          <Content />
        </div>

        <footer class="mt-12 pt-8 border-t border-base-200">
          <div class="flex flex-wrap gap-2">
            <span class="text-sm font-bold mr-2 self-center uppercase tracking-wider opacity-50">{locale.noticias?.tags || 'Tags'}:</span>
            {tags.map((tag: string) => (
              <a
                href={`/${lang}/noticias/categoria/${slugify(tag, { lower: true, strict: true })}`}
                class="badge badge-outline badge-primary px-3 py-3"
              >
                {tag}
              </a>
            ))}
          </div>
        </footer>
      </article>

      <!-- Sidebar -->
      <aside>
        <NewsSidebar noticias={langNoticias} lang={lang} texts={locale.texts} />
      </aside>
    </div>
  </main>
</BaseLayout>
