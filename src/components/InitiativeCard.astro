---
const { icon, title, description } = Astro.props;
---

<div class="card bg-base-100 shadow-md">
  <div class="card-body">
    <div class="flex items-start space-x-3">
      <div class="flex items-center justify-center w-12 h-12 rounded-full bg-primary text-white text-2xl">
        {icon}
      </div>
      <div class="max-w-sm">
        <h3 class="card-title text-2xl mb-1">{title}</h3>
        <p class="text-lg-content text-lg leading-snug">
          {description}
        </p>
      </div>
    </div>
  </div>
</div>
