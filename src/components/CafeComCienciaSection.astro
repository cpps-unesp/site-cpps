---
const { cafe } = Astro.props;
---

<section class="mt-16 space-y-16">
  <div class="text-center">
    <h2 class="text-4xl font-extrabold mb-4">{cafe.titulo}</h2>
    <p class="text-base-content max-w-2xl mx-auto">{cafe.descricao}</p>
  </div>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {cafe.episodios.map((episodio) => (
      <div class="bg-base-100 rounded-xl shadow-md p-6 flex flex-col space-y-4 hover:shadow-lg transition-shadow">
        <div class="text-4xl text-primary">{episodio.icone}</div>
        <h3 class="text-lg font-bold">{episodio.titulo}</h3>
        <p class="text-sm text-base-content">{episodio.descricao}</p>

        {Array.isArray(episodio.materiais) && episodio.materiais.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-2">
            {episodio.materiais.map((mat) => (
              <a
                href={mat.url}
                target="_blank"
                rel="noopener noreferrer"
                class="border border-base-content text-xs font-bold px-3 py-1 rounded hover:bg-base-200 transition-colors uppercase"
              >
                {mat.nome}
              </a>
            ))}
          </div>
        )}
      </div>
    ))}
  </div>
</section>
