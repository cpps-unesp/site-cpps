---
// src/components/TextoComCheck.astro
import CheckIcon from '../icons/CheckIcon.astro';
import { renderMarkdown } from '../utils/markdown';

interface Props {
  texto: {
    check: boolean;
    conteudo: string;
  }[];
}

const { texto } = Astro.props;
---

{
  texto.map((par) => (
    <div class="mb-4 flex items-start">
      {par.check ? (
        <div class="mt-1 mr-3 flex-shrink-0">
          <CheckIcon size={24} color="#22c55e" />
        </div>
      ) : (
        <div class="mr-3 w-[24px] flex-shrink-0" />
      )}
      <div class="paragrafo text-justify hyphens-auto">
        {/* eslint-disable-next-line astro/no-set-html-directive */}
        <Fragment set:html={renderMarkdown(par.conteudo)} />
      </div>
    </div>
  ))
}
