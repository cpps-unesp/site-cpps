---
interface Props {
  headings: { depth: number; slug: string; text: string }[];
}

const { headings } = Astro.props;
const filteredHeadings = headings.filter((h) => h.depth > 1 && h.depth < 4);
---

{
  filteredHeadings.length > 0 && (
    <ul class="border-base-300 space-y-3 border-l pl-4">
      {filteredHeadings.map((heading) => (
        <li>
          <a
            href={`#${heading.slug}`}
            class={`hover:text-primary text-base-content/60 block text-sm leading-tight transition-all ${
              heading.depth === 3 ? 'ml-4' : ''
            }`}
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  )
}
