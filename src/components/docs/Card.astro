---
interface Props {
  title: string;
  icon?: string;
}

const { title, icon } = Astro.props;
---

<div class="card bg-base-200 border border-base-300 shadow-sm not-prose">
  <div class="card-body p-6">
    <h3 class="card-title text-lg flex items-center gap-2">
      {icon && <span>{icon}</span>}
      {title}
    </h3>
    <div class="text-sm text-base-content/80 mt-2">
      <slot />
    </div>
  </div>
</div>
