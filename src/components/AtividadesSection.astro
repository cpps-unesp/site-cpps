---
import AtividadesCard from './AtividadesCard.astro';

type ActivityItem = {
  icon: string;
  title: string;
  description: string;
};

const {
  title,
  description,
  image,
  activities,
  reverse = false,
  id,
} = Astro.props as {
  title: string;
  description: string;
  image: string;
  activities: ActivityItem[];
  reverse?: boolean;
  id?: string;
};

const sectionClasses = reverse
  ? 'max-w-6xl mx-auto flex flex-col md:flex-row-reverse gap-8 items-center'
  : 'max-w-6xl mx-auto flex flex-col md:flex-row gap-8 items-center';
---

<section class="mt-16" id={id}>
  <div class={sectionClasses}>
    <div class="transform transition duration-500 hover:scale-105 md:w-1/2">
      <h3 class="mb-4 text-2xl font-extrabold">{title}</h3>
      <p class="text-base-content mb-6 text-lg">{description}</p>

      <ul class="space-y-4">
        {
          activities.map((item: ActivityItem) => (
            <AtividadesCard icon={item.icon} title={item.title} description={item.description} />
          ))
        }
      </ul>
    </div>

    <div class="transform transition duration-500 hover:scale-105 md:w-1/2">
      <img src={image} alt={title} class="rounded-lg shadow-lg" />
    </div>
  </div>
</section>
