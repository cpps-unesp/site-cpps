---
const {
  title = 'Frequently Asked Questions',
  subtitle = 'Dive into the following questions to gain insights into the powerful features that AstroWind offers and how it can elevate your web development journey.',
  faqs,
} = Astro.props;
---

<section class="mt-16">
  <p class="text-primary mb-2 text-center font-semibold tracking-wide uppercase">FAQs</p>
  <h2 class="mb-4 text-center text-4xl font-extrabold">{title}</h2>
  <p class="text-base-content mx-auto mb-10 max-w-2xl text-center">
    {subtitle}
  </p>

  <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
    {
      faqs.map((faq: { question: string; answer: string }) => (
        <div class="space-y-2">
          <div class="flex items-start space-x-2">
            <span class="text-primary text-xl">â€º</span>
            <h3 class="text-lg font-bold">{faq.question}</h3>
          </div>
          <p class="text-base-content text-sm">{faq.answer}</p>
        </div>
      ))
    }
  </div>
</section>
