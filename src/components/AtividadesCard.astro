---
const { icon, title, description } = Astro.props;
---

<li class="flex items-start space-x-3">
  <div class="text-xl text-green-500">
    {icon}
  </div>
  <div>
    <h3 class="text-lg font-semibold">{title}</h3>
    <p class="text-base-content text-sm">
      {description}
    </p>
  </div>
</li>
