---
const { icon, title, description } = Astro.props;
---

<li class="flex items-start space-x-3">
  <div class="text-green-500 text-xl">
    {icon}
  </div>
  <div>
    <h3 class="font-semibold text-lg">{title}</h3>
    <p class="text-base-content text-sm">
      {description}
    </p>
  </div>
</li>
