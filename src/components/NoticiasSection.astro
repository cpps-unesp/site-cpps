---
import NoticiaCard from './NoticiaCard.astro';

const { noticias, lang } = Astro.props;
---

<section class="mx-auto max-w-screen-xl px-4 py-12 md:px-8">
  <h2 class="titulo text-primary mb-12 text-center">Not√≠cias</h2>

  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      noticias.map((post) => (
        <NoticiaCard
          title={post.data.title}
          resumo={post.data.resumo}
          image={post.data.image}
          tags={post.data.tags}
          slug={`/${lang}/noticias/${post.slug}`}
          lang={lang}
        />
      ))
    }
  </div>
</section>
