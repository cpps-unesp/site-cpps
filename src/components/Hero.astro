---
interface Props {
  heroData: any;
  lang?: string;
}

const { heroData, lang = "pt" } = Astro.props;
---

<section
  class="relative w-full min-h-[100dvh] bg-cover bg-center sm:bg-top bg-no-repeat z-0"
  style={`background-image: url('${heroData?.hero.link}')`}
>
  <!-- ðŸ”³ Overlay em mobile usando base-100 para adaptaÃ§Ã£o automÃ¡tica ao tema -->
  <div
    class="absolute inset-0 z-0 sm:hidden bg-gradient-to-b from-base-100 via-base-100/90 to-base-100/80"
  >
  </div>

  <!-- ðŸ”³ Gradiente lateral no desktop usando base-100 para adaptaÃ§Ã£o automÃ¡tica ao tema -->
  <div class="absolute inset-0 z-0 hidden sm:block">
    <div class="absolute inset-y-0 left-0 w-80 bg-base-100"></div>
    <div
      class="absolute inset-y-0 left-80 right-[35%] bg-gradient-to-r from-base-100 via-base-100/90 to-transparent"
    >
    </div>
  </div>

  <!-- ConteÃºdo -->
  <div
    class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-full min-h-[100dvh] flex items-start sm:items-center pt-32 sm:pt-0"
  >
    <div class="flex flex-col items-start text-left w-full">
      <!-- Logo + TÃ­tulo -->
      <div
        class="flex flex-col sm:flex-row items-center gap-6 mb-8 text-center sm:text-left"
      >
        <img
          src="/imagens/logos/cpps/logo-cpps-01_rev_1.png"
          alt="Logo CPPS"
          class="h-32 sm:h-48 md:h-64 w-auto z-10"
        />
        <h1
          class="titulo text-3xl sm:text-5xl md:text-6xl leading-tight z-10 text-base-content mt-4 sm:mt-0"
          set:html={heroData?.hero.title}
        />
      </div>

      <!-- DescriÃ§Ã£o -->
      <div class="max-w-2xl w-full text-center sm:text-left px-2 sm:px-0">
        <p
          class="text-base md:text-lg leading-relaxed mb-6 text-base-content"
          set:html={heroData?.hero.description}
        />

        <!-- BotÃ£o -->
        <div
          class="flex flex-col sm:flex-row justify-end sm:justify-end items-center sm:items-end gap-4 mt-4"
        >
          {
            heroData?.hero.button && (
              <a
                href={`/${lang}${heroData.hero.button.url}`}
                class="btn btn-primary px-6 py-3 text-lg shadow-lg whitespace-nowrap"
                style="color: white;"
              >
                {heroData.hero.button.text}
              </a>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>