---
const { heroData, lang = "pt" } = Astro.props;
---
<section
  class="relative w-full min-h-screen bg-cover bg-top bg-no-repeat text-base-content z-0"
  style={`background-image: url('${heroData?.hero.link}')`}
>
  <!-- Camada translúcida -->
  <div class="absolute inset-0 bg-gray-800/40 z-0"></div>

  <!-- Conteúdo -->
  <div class="relative z-10 w-full max-w-7xl mx-auto px-6 pt-40 text-left">
    <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-6 max-w-3xl leading-tight drop-shadow-md">
      {heroData?.hero.titulo}
    </h1>

    <p
      class="text-lg text-white/90 mb-8 max-w-2xl leading-relaxed drop-shadow"
      set:html={heroData?.hero.descricao}
    />

    <div class="flex flex-col sm:flex-row items-start gap-4">
      {heroData?.hero.botao && (
        <a
          href={`/${lang}${heroData.hero.botao.url}`}
          class="btn btn-primary text-white px-8 py-3 text-lg shadow-lg"
        >
          {heroData.hero.botao.texto}
        </a>
      )}
      {heroData?.hero.botaoSecundario && (
        <a
          href={`/${lang}${heroData.hero.botaoSecundario.url}`}
          class="btn btn-outline text-white border-white hover:bg-white/10 px-8 py-3 text-lg"
        >
          {heroData.hero.botaoSecundario.texto}
        </a>
      )}
    </div>
  </div>
</section>
